generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Cat {
  id          Int        @id @default(autoincrement()) @map("_id")
  name        String
  description String
  image       String
  adoptions   Adoption[]
  createdAt   DateTime   @default(now())
}

model Adoption {
  id          Int      @id @default(autoincrement()) @map("_id")
  fullName    String
  telephone   String
  observation String
  cat         Cat      @relation(fields: [catId], references: [id])
  catId       Int
  createdAt   DateTime @default(now())
}
